          <% if catch.likes.count > 0 %>
            <span class="ml-2 text-base dark:text-gray-400 self-end"><%= catch.likes.count %></span>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <%= button_to catch_like_path(catch), method: :post, data: { turbo_method: :post }, class: 'inline-block dark:border-gray-900 border rounded-lg' do %>
      <div class="flex items-end">
