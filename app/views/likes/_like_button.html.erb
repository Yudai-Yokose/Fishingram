        </svg>
        <span class="text-base dark:text-gray-400 self-end ml-0">Nice Catch</span>
          <% if catch.likes.count > 0 %>
            <span class="ml-2 text-base dark:text-gray-400 self-end"><%= catch.likes.count %></span>
          <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>