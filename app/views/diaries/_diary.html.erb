<li class="py-3 sm:py-4">
  <%= link_to diary_path(diary), class: "block" do %>
    <div class="flex items-center">
      <div class="flex items-center">
        <div class="flex -space-x-4 rtl:space-x-reverse">
          <%= image_tag diary.user.profile_image, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800", alt: "#{diary.user.username} profile image" %>
          <% if diary.images.any? %>
            <%= image_tag diary.images.first, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800", alt: "Catch image" %>
          <% end %>
        </div>
      </div>
      <div class="flex-1 min-w-0 ms-2">
        <p class="text-sm text-gray-900 truncate dark:text-white">
          <%= diary.user.username %>
        </p>
        <p class="text-sm text-gray-500 truncate dark:text-gray-400">
          <%= I18n.l(diary.diary_date, format: :long) %>
        </p>
      </div>
    </div>
  <% end %>
</li>