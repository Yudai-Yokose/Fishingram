<% if diary.images.attached? %>
  <div id="carouselDiary" class="relative w-full" data-carousel="static">
    <div class="relative h-40 overflow-hidden rounded-tl-lg rounded-tr-lg">
      <% diary.images.each_with_index do |image, index| %>
        <div id="diary_slide_<%= image.id %>" class="hidden duration-700 ease-in-out <%= index == 0 ? 'block' : '' %>" data-carousel-item="<%= index == 0 ? 'active' : '' %>">
          <%= image_tag image, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2", alt: "Diary Image #{index + 1}" %>

          <%= turbo_frame_tag dom_id(image) do %>
            <%= link_to purge_image_diary_path(diary, image_id: image.id), data: { turbo_method: :delete }, class: "absolute top-2 left-1/2 transform -translate-x-1/2 z-50 text-white bg-red-500/70 rounded-full p-2 hover:bg-red-500/50" do %>
              <svg class="w-5 h-5 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Indicators -->
    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3">
      <% diary.images.each_with_index do |image, index| %>
        <button id="diary_carousel_link_<%= image.id %>" type="button" class="w-3 h-3 rounded-full bg-gray-300 hover:bg-gray-500" aria-label="Slide <%= index + 1 %>" data-carousel-slide-to="<%= index %>"></button>
      <% end %>
    </div>

    <!-- Slider controls -->
    <button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
      <svg class="w-4 h-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5 1 1 5l4 4" />
      </svg>
      <span class="sr-only">Previous</span>
    </button>
    <button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
      <svg class="w-4 h-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m1 9 4-4-4-4" />
      </svg>
      <span class="sr-only">Next</span>
    </button>
  </div>
<% end %>