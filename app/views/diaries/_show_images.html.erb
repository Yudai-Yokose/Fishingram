<% if diary.images.attached? %>
  <div id="carouselDiary" class="relative w-full" data-carousel="static">
    <div class="relative h-40 overflow-hidden rounded-tl-lg rounded-tr-lg">
      <% diary.images.each_with_index do |image, index| %>
        <div class="hidden duration-700 ease-in-out <%= index == 0 ? 'block' : '' %>" data-carousel-item="<%= index == 0 ? 'active' : '' %>">
          <%= image_tag image, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 cursor-pointer", alt: "Diary Image #{index + 1}", data: { modal_target: "popup-modal-#{diary.id}-#{index}", modal_toggle: "popup-modal-#{diary.id}-#{index}" } %>
        </div>
      <% end %>
    </div>

    <!-- Slider indicators -->
    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3">
      <% diary.images.each_with_index do |_, index| %>
        <button type="button" class="w-3 h-3 rounded-full bg-gray-400" aria-label="Slide <%= index + 1 %>" data-carousel-slide-to="<%= index %>"></button>
      <% end %>
    </div>

    <!-- Slider controls -->
    <button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
      <svg class="w-4 h-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5 1 1 5l4 4" />
      </svg>
      <span class="sr-only">Previous</span>
    </button>
    <button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
      <svg class="w-4 h-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m1 9 4-4-4-4" />
      </svg>
      <span class="sr-only">Next</span>
    </button>
  </div>

  <!-- Images in modal -->
  <% diary.images.each_with_index do |image, index| %>
    <div id="popup-modal-<%= diary.id %>-<%= index %>" tabindex="-1" aria-hidden="true" class="hidden fixed inset-0 z-50 flex justify-center items-center overflow-y-auto overflow-x-hidden bg-gray-900 bg-opacity-70">
      <div class="relative p-4 w-full max-w-sm min-h-[60vh] max-h-full">
        <div class="border border-gray-700 rounded-lg shadow bg-gray-900">
          <div class="relative rounded-t text-center">
            <button type="button" class="absolute top-3 right-3 text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg w-8 h-8 inline-flex justify-center items-center" data-modal-hide="popup-modal-<%= diary.id %>-<%= index %>">
              <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
          </div>
          <div class="py-1 px-1">
            <%= image_tag image, class: "rounded-lg w-full", alt: "Full Image #{index + 1}" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

<% else %>
  <div class="flex flex-col items-center justify-center p-5 text-gray-400">
    <svg class="w-7 h-7" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
      <path fill="currentColor" d="M16 18H8l2.5-6 2 4 1.5-2 2 4Zm-1-8.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0Z" />
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M10 3v4a1 1 0 0 1-1 1H5m14-4v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1 .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1ZM8 18h8l-2-4-1.5 2-2-4L8 18Zm7-8.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0Z" />
    </svg>
    <span class="mt-2 text-base">No Image Available</span>
  </div>
<% end %>