<%= turbo_frame_tag "diary_#{diary.id}_top_image" do %>
  <div class="flex -space-x-4 rtl:space-x-reverse">
    <%= image_tag diary.user.profile_image, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800", alt: "#{diary.user.username} profile image" %>
    <% if diary.images.any? %>
      <%= image_tag diary.images.first, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800", alt: "Diary image" %>
    <% end %>
  </div>
<% end %>