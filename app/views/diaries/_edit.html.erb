<%= turbo_frame_tag "edit_diary_#{@diary.id}_form" do %>
  <section class="bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col items-center justify-center px-1 py-1 mx-auto">
      <div class="w-full rounded-lg shadow dark:border sm:max-w-md dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4">
            <div class="flex items-center justify-center mb-2 text-lg text-gray-900 dark:text-white">
              <%= image_tag "/icon_white.svg", class: "w-8 h-8 mr-2", alt: "logo" %>
              <%= t('activerecord.attributes.diary.edit.title') %>
            </div>
            <%= render partial: 'diaries/edit_images', locals: { diary: diary } %>
            <%= render partial: "diaries/form", locals: { diary: diary } %>
        </div>
      </div>
    </div>
  </section>
<% end %>