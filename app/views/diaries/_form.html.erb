<section id="new_diary_form" class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-1 py-1 mx-auto">
    <div class="w-full bg-white rounded-lg shadow dark:border sm:max-w-md dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4">
        <!-- Title -->
        <h1>
          <% if diary.persisted? %>
            <a href="#" class="flex items-center justify-center mb-2 text-lg text-gray-900 dark:text-white">
              <%= image_tag "/2.svg", class: "w-8 h-8 mr-2", alt: "logo" %>
              <%= t('activerecord.attributes.diary.edit.title') %>
            </a>
            <%= render 'diaries/edit', diary: diary %>
          <% else %>
            <a href="#" class="flex items-center justify-center mb-6 text-lg text-gray-900 dark:text-white">
              <%= image_tag "/2.svg", class: "w-8 h-8 mr-2", alt: "logo" %>
              <%= t('activerecord.attributes.diary.new.title') %>
            </a>
          <% end %>
        </h1>

        <!-- Form -->
        <%= form_with model: diary, html: { class: "space-y-2" } do |f| %>
          <!-- File to upload -->
          <div data-controller="file-upload">
            <div class="flex items-center justify-center w-full">
              <label for="diary-dropzone-file" class="flex items-center w-full bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 text-base rounded-lg cursor-pointer focus:ring-primary-600 focus:border-primary-600 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" data-file-upload-target="label">
                <div class="rounded-lg bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300 px-4 py-2">
                  <%= t('activerecord.attributes.diary.new.upload_prompt') %>
                </div>
                <div class="flex-1 px-4 py-2" style="display: inline-block; max-width: 100%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                  <span class="text-base text-gray-500 dark:text-gray-400 max-w-xs text-center truncate" data-file-upload-target="fileName">
                    <%= t('activerecord.attributes.diary.new.upload_placeholder') %>
                  </span>
                </div>
                <%= f.file_field :images, multiple: true, id: "diary-dropzone-file", class: "hidden", data: { action: "change->file-upload#displayFileName", file_upload_target: "fileInput" } %>
              </label>
            </div>
          </div>

          <!-- Date -->
          <div data-controller="date" class="relative max-w-sm">
            <div class="relative">
              <div class="absolute inset-y-0 left-0 flex items-center pointer-events-none"></div>
              <input id="default-datepicker" data-date-target="datepicker" data-action="change->date#updateDate" type="text" class="bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 text-base rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Select date" value="<%= diary.diary_date.present? ? diary.diary_date.strftime('%Y-%m-%d') : '' %>">
              <%= f.hidden_field :diary_date, id: "diary_date", data: { date_target: "hiddenField" } %>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-2">
            <!-- Weather -->
            <%= f.select :weather, Diary.weathers.keys.map { |key| [key, key] }, { prompt: t('activerecord.attributes.diary.new.weather_prompt') }, 
              { id: "weather_select", class: "bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" } %>

            <!-- Catch_count -->
            <%= f.select :catch_count, Diary.catch_counts.keys.map { |key| [key, key] }, { prompt: t('activerecord.attributes.diary.new.catch_count_prompt') }, 
              { id: "catch_count_select", class: "bg-gray-50 border border-gray-300 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 text-gray-500 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" } %>

            <!-- Time_of_day -->
            <%= f.select :time_of_day, Diary.time_of_days.keys.map { |key| [key, key] }, { prompt: t('activerecord.attributes.diary.new.time_of_day_prompt') }, 
              { id: "time_of_day_select", class: "bg-gray-50 border border-gray-300 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 text-gray-500 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" } %>

            <!-- temperature -->
            <%= f.select :temperature, Diary.temperatures.keys.map { |key| [key, key] }, { prompt: t('activerecord.attributes.diary.new.temperature_prompt') }, 
              { id: "temperature_select", class: "bg-gray-50 border border-gray-300 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 text-gray-500 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" } %>
          </div>

          <!-- Content -->
          <%= f.text_area :content, id: "content", placeholder: t('activerecord.attributes.diary.new.content'), rows: 5, 
            class: "bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 text-gray-500 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" %>

          <!-- Toggle Map -->
          <div data-controller="diarytogglemap">
            <label class="py-2 inline-flex w-full justify-end cursor-pointer">
              <input id="location-diarytoggle" type="checkbox" value="" class="sr-only peer" data-action="change->diarytogglemap#diarytoggleMap">
              <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
              <span class="ms-3 text-base font-medium text-gray-900 dark:text-gray-300">
              <% if diary.persisted? %>
                <%= t('activerecord.attributes.diary.edit.map') %>
              <% else %>
                <%= t('activerecord.attributes.diary.new.map') %>
              <% end %>
              </span>
            </label>

            <div id="diary-location-fields" data-diarytogglemap-target="diaryLocationFields" style="display: none;">
              <div id="map-spinner-diary-<%= diary.id %>" class="flex items-center justify-center min-h-[300px]" style="display: none;">
                <div role="status" class="text-center">
                  <button disabled type="button" class="py-3 px-5 me-2 text-base font-medium text-gray-900 bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 inline-flex items-center">
                    <svg aria-hidden="true" role="status" class="inline w-6 h-6 me-3 text-gray-200 animate-spin dark:text-gray-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                      <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="#1C64F2"/>
                    </svg>
                    Loading...
                  </button>
                </div>
              </div>

              <!-- Latitude and Longitude -->
              <div data-controller="diarynewmap" data-map-api-key-value="<%= Rails.application.credentials.google[:maps_api_key] %>" data-map-id-value="<%= Rails.application.credentials.google[:maps_id] %>" data-diary-id-value="<%= diary.id %>">
                <%= f.hidden_field :latitude, data: { diarynewmap_target: "diaryLatitude" } %>
                <%= f.hidden_field :longitude, data: { diarynewmap_target: "diaryLongitude" } %>
              </div>

              <!-- Map area -->
              <div id="diary-map-<%= diary.id %>" class="rounded-lg mt-2" style="width: 100%; height: 200px;"></div>
            </div>
          </div>

          <!-- Submit button -->
          <% if diary.persisted? %>
            <%= f.submit t('activerecord.attributes.diary.edit.submit'), class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-base px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
          <% else %>
            <%= f.submit t('activerecord.attributes.diary.new.submit'), class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-base px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>