<div class="px-3 py-3 font-normal text-base text-gray-500 truncate dark:text-gray-400">
  <!-- details -->    
  <div class="grid grid-cols-2 gap-2">
    <p class="bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 rounded-lg block w-full p-1.5 pl-3 text-left dark:bg-gray-900 dark:border-gray-800">
      <%= diary.weather %>
    </p>
    <p class="bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 rounded-lg block w-full p-1.5 pl-3 text-left dark:bg-gray-900 dark:border-gray-800">
      <%= diary.catch_count %>
    </p>
    <p class="bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 rounded-lg block w-full p-1.5 pl-3 text-left dark:bg-gray-900 dark:border-gray-800">
      <%= diary.time_of_day %>
    </p>
    <p class="bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 rounded-lg block w-full p-1.5 pl-3 text-left dark:bg-gray-900 dark:border-gray-800">
      <%= diary.temperature %>
    </p>
  </div>
  <p class="mt-2 bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 rounded-lg block w-full p-1.5 pl-3 text-left dark:bg-gray-900 dark:border-gray-800 break-words whitespace-normal">
    <%= diary.content %>
  </p>

  <!-- edit and delete button -->    
  <% if current_user == @diary.user %>
    <div class="mt-1 space-x-3 bg-gray-50 border border-gray-300 text-gray-500 dark:text-gray-400 rounded-lg block w-full p-1 pl-3 text-right dark:bg-gray-900 dark:border-gray-900">
        <%= turbo_frame_tag "diary_#{diary.id}" do %>
            <%= link_to diary, data: { turbo_confirm: t('activerecord.attributes.diary.show.confirm'), turbo_method: :delete }, class: 'inline-block' do %>
                <svg class="w-6 h-6 align-middle block" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                </svg>
            <% end %>
        <% end %>
        
        <button data-modal-target="edit-modal" data-modal-toggle="edit-modal" data-action="click->hello#stopToggle" class="inline-block" type="button">
          <svg class="w-6 h-6 align-middle block" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M18 5V4a1 1 0 0 0-1-1H8.914a1 1 0 0 0-.707.293L4.293 7.207A1 1 0 0 0 4 7.914V20a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-5M9 3v4a1 1 0 0 1-1 1H4m11.383.772 2.745 2.746m1.215-3.906a2.089 2.089 0 0 1 0 2.953l-6.65 6.646L9 17.95l.739-3.692 6.646-6.646a2.087 2.087 0 0 1 2.958 0Z"/>
          </svg>
        </button>
    </div>
  <% end %>
</div>

  <!-- edit modal -->
  <div id="edit-modal" data-editmodal-target="editModal" data-controller="editmodal" data-action="click->hello#stopToggle" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-10 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 max-h-full">
      <div class="relative p-4 w-full max-w-sm min-h-[60vh] max-h-full">
          <div class="relative text-gray-400 border border-gray-200 rounded-lg shadow sm:p-6 md:p-0 dark:bg-gray-900 dark:border-gray-700">
              <button type="button" class="absolute z-100 top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="edit-modal">
                  <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                  </svg>
                  <span class="sr-only">Close modal</span>
              </button>
              <div class="py-3 px-3">
                <%= turbo_frame_tag "edit_diary_form", src: edit_diary_path(diary, format: :turbo_stream), loading: "lazy" %>
              </div>
          </div>
      </div>
  </div>