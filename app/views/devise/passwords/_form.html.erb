<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-3 mx-auto">
    <div class="w-full bg-white rounded-lg shadow dark:border sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">

        <!-- Validation error messages -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Title -->
        <a href="#" class="flex items-center justify-center mb-6 text-lg text-gray-900 dark:text-white">
          <%= image_tag "/2.svg", class: "w-8 h-8 mr-2", alt: "logo" %>
          <%= t('devise.passwords.new.title') %>
        </a>

        <!-- Explanation -->
        <div class="flex items-start mt-6">
          <div class="ml-3 text-base">
            <label for="terms" class="font-light text-gray-500 dark:text-gray-300">
              パスワードを忘れた場合、パスワード変更用のメールを送信します。登録したメールアドレスを入力し、送信ボタンを押してください。
            </label>
          </div>
        </div>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false }, class: "space-y-4 md:space-y-6" }) do |f| %>
          <div>
            <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center w-full">
            <%= f.submit t('.send_me_reset_password_instructions'), class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-base text-center py-2.5 px-5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>