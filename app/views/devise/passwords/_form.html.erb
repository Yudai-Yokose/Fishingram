<turbo-frame id="password_form">
    <div class="relative z-0 w-full mb-5 group">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false }, class: "space-y-4 md:space-y-6" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="flex items-start mt-6" style="margin-top: 20px; margin-bottom: 20px;">
            <div class="ml-3 text-base">
                <label for="terms" class="font-light text-gray-500 dark:text-gray-300">パスワードを忘れた場合、パスワード変更用のメールを送信します。登録したメールアドレスを入力し、送信ボタンを押してください。</label>
            </div>
            </div>

            <!-- Email Field -->
            <div class="relative z-0 w-full mb-5 group">
            <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), autocomplete: "email", class: "block py-2.5 px-0 w-full text-base text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer", placeholder: " " %>
            <label for="user_email" class="peer-focus:font-medium absolute text-base text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">
                <%= t('activerecord.attributes.user.email') %>
            </label>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center w-full">
            <%= f.submit t('.send_me_reset_password_instructions'), class: "w-full max-w-xs sm:max-w-sm text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-base text-center py-2.5 px-5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
            </div>

        <% end %>
    </div>
</turbo-frame>