<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-3 mx-auto">
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <!-- Title -->
        <a href="#" class="flex items-center justify-center mb-6 text-lg text-gray-900 dark:text-white">
          <%= image_tag "/icon_white.svg", class: "w-8 h-8 mr-2", alt: "logo" %>
          <%= t('devise.sessions.new.sign_in') %>  
        </a>
        
        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { id: "user_session", class: "space-y-4 md:space-y-6" }) do |f| %>
          <div>
            <%= f.email_field :email, id: "user_session_email", autocomplete: "email", placeholder: t('activerecord.attributes.user.email'), class: "bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>
          <div>
            <%= f.password_field :password, id: "user_session_password", autocomplete: "current-password", placeholder: t('activerecord.attributes.user.password'), class: "bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-start">
              <div class="flex items-center mt-1 h-5">
                <%= f.check_box :remember_me, id: "user_session_remember_me", class: "w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800" %>
              </div>
              <div class="ml-3 text-base">
                <label for="user_session_remember_me" class="font-light text-gray-500 dark:text-gray-300">
                  <%= t('devise.sessions.form.remember_me') %>
                </label>
              </div>
            </div>
          <% end %>

          <!-- Google login button -->
          <div class="flex justify-center">
            <%= link_to user_google_oauth2_omniauth_authorize_path, class: "w-full inline-flex items-center justify-center px-5 py-2.5 text-base text-gray-700 border border-gray-300 rounded-lg bg-transparent hover:bg-gray-50 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-600 focus:outline-none focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600", data: { turbo: false } do %>
              <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                <path fill="none" d="M0 0h48v48H0z"></path>
              </svg>
              <span>Sign in with Google</span>
            <% end %>
          </div>

          <!-- Submit button -->
          <div class="flex justify-center w-full">
            <%= f.submit t('.sign_in'), class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-base px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
          </div>
          
          <!-- If not to have account -->
          <p class="text-base text-center font-light text-gray-500 dark:text-gray-400">
            パスワードを忘れた方は <a href="<%= new_password_path(resource_name) %>" class="font-medium text-primary-600 hover:underline dark:text-primary-500">こちら</a>
          </p>

        <% end %>
      </div>
    </div>
  </div>
</section>