<%= turbo_frame_tag "edit_content" do %>
    <div class="flex flex-col items-center pb-10">
        <%= image_tag resource.profile_image, class: 'w-24 h-24 mb-6 rounded-full shadow-lg object-cover' %>
        <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= resource.username %></h5>
        <span class="text-sm md:text-base text-gray-500 dark:text-gray-400"><%= resource.email %></span>
        <div class="flex mt-4 md:mt-6">
            <button data-modal-target="profilemodal" data-modal-toggle="profilemodal" type="button" class="inline-flex items-center px-4 py-2 text-sm md:text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-900 dark:hover:bg-blue-700 dark:focus:ring-blue-800">編集</button>
            <a href="<%= index_user_path %>" class="py-2 px-4 ms-2 text-sm md:text-base font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">戻る</a>
        </div>
    </div>
    <!-- Profile modal -->
    <div id="profilemodal" data-profilemodal-catch-id-value="profilemodal" data-profilemodal-target="profilemodal" data-controller="profilemodal" data-action="click->hello#stopToggle" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full" data-controller="record">
        <div class="relative p-4 w-full max-w-md max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                <!-- Modal header -->
                <div class="flex items-center justify-between p-4 border-b rounded-t dark:border-gray-600">
                    <h3 class="text-sm md:text-base font-semibold text-gray-900 dark:text-white w-full">
                    プロフィール編集
                    </h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="profilemodal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                    </button>
                </div>
                <!-- Modal body -->
                <div class="p-4 md:p-5">
                <%= render partial: 'edit_form', locals: { resource: resource } %>
                </div>
            </div>
        </div>
    </div> 
<% end %>