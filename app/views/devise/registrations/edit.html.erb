<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-4 py-2 mx-auto">
    <div class="w-full max-w-md p-8 bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-900 dark:border-gray-700">
      <div class="flex items-center justify-between mb-4">
        <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white">My Page</h5>
        <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { turbo_confirm: t('.are_you_sure'), turbo_method: :delete }, class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" %>
      </div>
        <!-- Image and Buttons -->
        <%= turbo_frame_tag "edit_content" do %>
          <div class="flex flex-col items-center py-10">
              <%= image_tag resource.profile_image, class: 'w-24 h-24 mb-3 rounded-full shadow-lg object-cover' %>
              <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= resource.username %></h5>
              <span class="text-sm text-gray-500 dark:text-gray-400"><%= resource.email %></span>
              <div class="flex mt-4 md:mt-6">
                <button data-modal-target="profilemodal" data-modal-toggle="profilemodal" type="button" class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">編集</button>
                <a href="<%= catches_path %>" data-turbo="false" class="py-2 px-4 ms-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">戻る</a>
              </div>
          </div>
        <% end %>
    </div>
  </div>
</section>

<!-- profilemodal -->
<div id="profilemodal" 
  data-profilemodal-catch-id-value="profilemodal" 
  data-profilemodal-target="profilemodal" 
  data-controller="profilemodal" 
  data-action="click->hello#stopToggle" 
  tabindex="-1" 
  aria-hidden="true" 
  class="hidden fixed inset-0 z-50 flex justify-center items-center overflow-y-auto overflow-x-hidden bg-gray-900 bg-opacity-70">
  <div class="relative p-4 w-full max-w-sm min-h-[60vh] max-h-full">
    <div class="border border-gray-700 rounded-lg shadow bg-gray-900">
      <div class="relative rounded-t text-center">
        <button type="button" 
                class="absolute top-3 right-3 text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg w-8 h-8 inline-flex justify-center items-center" 
                data-modal-hide="profilemodal">
          <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div class="py-1 px-1">
        <%= render partial: 'edit_form', locals: { resource: resource } %>
      </div>
    </div>
  </div>
</div>