    <h1 class="hidden fade-in-top mt-36 md:mt-40 mb-2 flex items-center justify-center " data-intro-target="element">
      <%= image_tag "/icon_white.svg", class: "h-32 md:h-48", alt: "Fishingram Logo" %>
    </h1>
    <p class="hidden fade-in-bottom flex mt-2 items-center justify-center mb-4" data-intro-target="element">
      <%= image_tag "/banner_white_subtitle.svg", class: "h-16 md:h-24", alt: "Fishingram Banner" %>
