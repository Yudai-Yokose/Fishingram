<section class="bg-gray-900 pb-24">
  <div class="flex flex-col items-center justify-center px-3 mx-auto">
    <div class="w-full rounded-lg border md:mt-0 sm:max-w-md bg-gray-900 border-gray-700">
      <div class="p-6 space-y-3 md:space-y-6 sm:p-8 w-full max-w-lg">
        <div class="flow-root">
          <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
              <li class="py-3 sm:py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <%= image_tag @user.profile_image.attached? ? url_for(@user.profile_image) : 'default-avatar.png', class: "w-12 h-12 rounded-full object-cover" %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-lg font-medium text-gray-900 truncate dark:text-white">
                      <%= @user.username %>
                    </p>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      <%= @user.email %>
                    </p>
                  </div>
                </div>
              </li>
          </ul>
        </div>

        <!-- 編集フォーム -->
        <div class="flow-root mt-6">
          <%= form_for [:admin, @user], class: 'space-y-4' do |f| %>
            <div class="mb-4">
              <%= f.label :username, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
              <%= f.text_field :username, class: 'block w-full p-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg sm:text-sm dark:bg-gray-700 dark:border-gray-600 dark:text-white' %>
            </div>
            <div class="mb-4">
              <%= f.label :email, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
              <%= f.email_field :email, class: 'block w-full p-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg sm:text-sm dark:bg-gray-700 dark:border-gray-600 dark:text-white' %>
            </div>

            <!-- ボタンの整列 -->
            <div class="flex justify-end space-x-4 mt-6">
              <%= link_to 'Cancel', admin_user_path, class: 'py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700' %>
              <%= f.submit 'Update', class: 'px-4 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>