<div class="py-24 md:pt-8 md:pb-24">
  <!-- Title -->
  <div class="flex items-center justify-between max-w-screen-xl mx-auto px-3">
    <h5 class="text-lg md:text-xl font-bold leading-none text-gray-900 dark:text-white">User Management</h5>
    <a href="<%= admin_dashboard_path %>" class="text-sm md:text-base font-medium text-blue-600 hover:underline dark:text-blue-500">Back to Dashboard</a>
  </div>

  <!-- Search -->
  <form class="max-w-screen-xl mx-auto px-3 py-6">
    <label for="default-search" class="mb-2 text-sm md:text-base font-medium text-gray-900 sr-only dark:text-white">Search</label>
    <div class="relative">
      <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
        </svg>
      </div>
      <input type="search" id="default-search" class="block w-full p-4 ps-10 text-sm md:text-base text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search Mockups, Logos..." required />
      <button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-blue-900 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm md:text-base px-4 py-2 dark:bg-blue-900 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Search</button>
    </div>
  </form>

  <!-- User Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-3 max-w-screen-xl mx-auto">
    <% @users.each do |user| %>
      <div class="bg-white border border-gray-200 rounded-lg shadow dark:border-gray-700 dark:bg-gray-900 flex flex-col items-center p-6">
        <%= image_tag user.profile_image.attached? ? url_for(user.profile_image) : 'default-avatar.png', class: "w-24 h-24 rounded-full shadow-lg object-cover aspect-square mb-4" %>
        <h5 class="text-lg font-bold text-gray-900 dark:text-white"><%= user.username %></h5>
        <p class="text-sm text-gray-500 dark:text-gray-400"><%= user.email %></p>

        <!-- Action Buttons -->
        <div class="flex mt-4 space-x-2">
          <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'py-2 px-4 ms-2 text-sm md:text-base font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
