<div class="fixed z-50 w-full h-16 max-w-lg -translate-x-1/2 border border-gray-700 rounded-full bottom-4 left-1/2 bg-gray-900">
  <div class="grid h-full max-w-lg grid-cols-5 mx-auto">
    <a href="<%= catches_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 rounded-s-full hover:bg-gray-800 group">
      <svg class="w-7 h-7 text-gray-400 group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="1" d="M4.5 17H4a1 1 0 0 1-1-1 3 3 0 0 1 3-3h1m0-3.05A2.5 2.5 0 1 1 9 5.5M19.5 17h.5a1 1 0 0 0 1-1 3 3 0 0 0-3-3h-1m0-3.05a2.5 2.5 0 1 0-2-4.45m.5 13.5h-7a1 1 0 0 1-1-1 3 3 0 0 1 3-3h3a3 3 0 0 1 3 3 1 1 0 0 1-1 1Zm-1-9.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Z"/>
      </svg>
      <span class="text-gray-400 text-base">All</span>
    </a>
    <a href="<%= index_user_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 hover:bg-gray-800 group">
      <svg class="w-7 h-7 text-gray-400 group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Zm0 0a8.949 8.949 0 0 0 4.951-1.488A3.987 3.987 0 0 0 13 16h-2a3.987 3.987 0 0 0-3.951 3.512A8.948 8.948 0 0 0 12 21Zm3-11a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
      </svg>
      <span class="text-gray-400 text-base">Yours</span>
    </a>
    <div class="flex items-center justify-center h-full">
      <button data-modal-target="record-modal" data-modal-toggle="record-modal" type="button" class="inline-flex flex-col items-center justify-center w-16 h-16 font-medium bg-blue-600 rounded-full hover:bg-blue-700 group focus:ring-4 focus:ring-blue-800">
        <svg class="w-7 h-7 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m4.988 19.012 5.41-5.41m2.366-6.424 4.058 4.058-2.03 5.41L5.3 20 4 18.701l3.355-9.494 5.41-2.029Zm4.626 4.625L12.197 6.61 14.807 4 20 9.194l-2.61 2.61Z"/>
        </svg>
        <span class="text-white text-sm">Record</span>
      </button>
    </div>
    <% if user_signed_in? %>
      <a href="<%= diaries_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 hover:bg-gray-800 group">
        <svg class="w-7 h-7 text-gray-400 group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5 19V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v13H7a2 2 0 0 0-2 2Zm0 0a2 2 0 0 0 2 2h12M9 3v14m7 0v4"/>
        </svg>
        <span class="text-gray-400 text-base">Diary</span>
      </a>
      <a href="<%= edit_user_registration_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 rounded-e-full hover:bg-gray-800 group">
        <svg class="w-7 h-7 text-gray-400 group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="square" stroke-linejoin="round" stroke-width="1" d="M10 19H5a1 1 0 0 1-1-1v-1a3 3 0 0 1 3-3h2m10 1a3 3 0 0 1-3 3m3-3a3 3 0 0 0-3-3m3 3h1m-4 3a3 3 0 0 1-3-3m3 3v1m-3-4a3 3 0 0 1 3-3m-3 3h-1m4-3v-1m-2.121 1.879-.707-.707m5.656 5.656-.707-.707m-4.242 0-.707.707m5.656-5.656-.707.707M12 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
        <span class="text-gray-400 text-base">Profile</span>
      </a>
    <% else %>
      <a href="<%= new_user_registration_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 hover:bg-gray-800 group">
        <svg class="w-7 h-7 text-gray-400 group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 12h4m-2 2v-4M4 18v-1a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v1a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1Zm8-10a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
        <span class="text-gray-400 text-base">Signup</span>
      </a>
      <a href="<%= new_user_session_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 rounded-e-full hover:bg-gray-800 group">
        <svg class="w-7 h-7 text-gray-400 group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 12H4m12 0-4 4m4-4-4-4m3-4h2a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3h-2"/>
        </svg>
        <span class="text-gray-400 text-base">Login</span>
      </a>
    <% end %>
  </div>
</div>

<!-- Record modal -->
<div id="record-modal" tabindex="-1" aria-hidden="true" class="hidden fixed inset-0 z-50 flex justify-center items-center overflow-y-auto overflow-x-hidden bg-gray-900 bg-opacity-70" data-controller="record">
  <div class="relative p-4 w-full max-w-sm min-h-[60vh] max-h-full">
    <div class="border border-gray-700 rounded-lg shadow bg-gray-900">
      <div class="flex items-center justify-between p-3 md:p-4 border-b border-gray-700 rounded-t">
        <ul class="flex items-center w-full">
          <li class="flex-1 text-lg text-gray-400 text-right" data-record-target="tab">
            <button data-index="0" data-action="click->record#show" class="w-full p-1 rounded-t-lg">Catch</button>
          </li>
          <li class="flex-1 text-lg text-gray-400 text-left" data-record-target="tab">
            <button data-index="1" data-action="click->record#show" class="w-full p-1 rounded-t-lg">Diary</button>
          </li>
        </ul>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg w-8 h-8 inline-flex justify-center items-center" data-modal-hide="record-modal">
          <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div class="py-1 px-1">
        <div data-record-target="content" class="catch-form">
          <%= turbo_frame_tag "new_catch_form", src: new_catch_path(format: :turbo_stream), data: { turbo_temporary: true }, loading: "lazy" %>
        </div>
        <div data-record-target="content" class="diary-form hidden">
          <%= turbo_frame_tag "new_diary_form", src: new_diary_path(format: :turbo_stream),  data: { turbo_temporary: true }, loading: "lazy" %>
        </div>
      </div>
    </div>
  </div>
</div>