<!-- Record modal -->
<div id="record-modal" tabindex="-1" aria-hidden="true" class="hidden fixed inset-0 z-50 flex justify-center items-center overflow-y-auto overflow-x-hidden bg-gray-900 bg-opacity-70" data-controller="record">
  <div class="relative p-4 w-full max-w-sm min-h-[60vh] max-h-full">
    <div class="border border-gray-700 rounded-lg shadow bg-gray-900">
      <div class="flex items-center justify-between p-3 md:p-4 border-b border-gray-700 rounded-t">
        <ul class="flex items-center w-full">
          <li class="flex-1 text-lg text-gray-400 text-right" data-record-target="tab">
            <button data-index="0" data-action="click->record#show" class="w-full p-1 rounded-t-lg">
              <span class="text-base font-extrabold tracking-tight">釣果</span>
            </button>
          </li>
          <li class="flex-1 text-lg text-gray-400 text-left" data-record-target="tab">
            <button data-index="1" data-action="click->record#show" class="w-full p-1 rounded-t-lg">
              <span class="text-base font-extrabold tracking-tight">日記</span>
            </button>
          </li>
        </ul>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg w-8 h-8 inline-flex justify-center items-center" data-modal-hide="record-modal">
          <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div class="py-1 px-1">
        <div data-record-target="content" class="catch-form">
          <%= turbo_frame_tag "new_catch_form", src: new_catch_path(format: :turbo_stream), data: { turbo_temporary: true }, loading: "lazy" %>
        </div>
        <div data-record-target="content" class="diary-form hidden">
          <%= turbo_frame_tag "new_diary_form", src: new_diary_path(format: :turbo_stream),  data: { turbo_temporary: true }, loading: "lazy" %>
        </div>
      </div>
    </div>
  </div>
</div>