<footer class="fixed bottom-0 left-0 w-full bg-transparent text-neutral-content font-bold shadow-none">
  <div class="flex justify-around items-center py-3">
    <a href="<%= catches_path %>" class="flex flex-col items-center text-neutral-content font-bold">
      <i class="fas fa-th-list text-2xl"></i>
      <span class="text-sm mt-2">All</span>
    </a>

    <a href="<%= user_index_path %>" class="flex flex-col items-center text-neutral-content font-bold">
      <i class="fas fa-user-friends text-2xl"></i>
      <span class="text-sm mt-2">Yours</span>
    </a>

    <button class="flex flex-col items-center text-neutral-content font-bold" onclick="recordModal.showModal()">
      <i class="fas fa-plus-circle text-5xl text-primary"></i>
      <span class="text-sm mt-2">Record</span>
    </button>

    <% if user_signed_in? %>
      <a href="<%= diaries_path %>" class="flex flex-col items-center text-neutral-content font-bold">
        <i class="fas fa-book text-2xl"></i>
        <span class="text-sm mt-2">Diary</span>
      </a>

      <a href="<%= edit_user_registration_path %>" class="flex flex-col items-center text-neutral-content font-bold">
        <i class="fas fa-user-circle text-2xl"></i>
        <span class="text-sm mt-2">Profile</span>
      </a>
    <% else %>
      <button class="flex flex-col items-center text-neutral-content font-bold" onclick="signUpModal.showModal()">
        <i class="fas fa-user-plus text-2xl"></i>
        <span class="text-sm mt-2">Sign up</span>
      </button>

      <!-- Sign Up Modal -->
      <dialog id="signUpModal" class="modal">
        <div class="modal-box text-neutral-content font-bold">
          <%= render "devise/registrations/new" %>
        </div>
        <form method="dialog" class="modal-backdrop">
          <button class>Close</button>
        </form>
      </dialog>

      <button class="flex flex-col items-center text-neutral-content font-bold" onclick="loginModal.showModal()">
        <i class="fas fa-sign-in-alt text-2xl"></i>
        <span class="text-sm mt-2">Login</span>
      </button>

      <!-- Login Modal -->
      <dialog id="loginModal" class="modal">
        <div class="modal-box text-neutral-content font-bold">
          <%= render "devise/sessions/new" %>
        </div>
        <form method="dialog" class="modal-backdrop">
          <button class>Close</button>
        </form>
      </dialog>
    <% end %>
  </div>
</footer>

<!-- Record Modal -->
<div data-controller="record">
  <dialog id="recordModal" class="modal" data-record-target="recordModal">
    <div class="modal-box text-neutral-content font-bold">
      <%= render "shared/record" %>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button class>Close</button>
    </form>
  </dialog>
</div>