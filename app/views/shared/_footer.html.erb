<!-- Record modal -->
<div id="record-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full" data-controller="record">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-800">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-sm md:text-base xl:text-lg font-semibold text-gray-900 dark:text-white w-full">
                  <ul class="flex flex-wrap justify-center space-x-4 font-medium text-center" id="record-tab" data-tabs-toggle="#record-tab-content" role="tablist">
                      <li role="catch">
                          <button class="inline-block p-2 border-b-2 rounded-t-lg text-base md:text-lg" id="catch-tab" data-tabs-target="#catch" type="button" role="tab" aria-controls="catch" aria-selected="false">釣果</button>
                      </li>
                      <li role="diary">
                          <button class="inline-block p-2 border-b-2 rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 text-base md:text-lg" id="diary-tab" data-tabs-target="#diary" type="button" role="tab" aria-controls="diary" aria-selected="false">日記</button>
                      </li>
                  </ul>
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="record-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 pt-0 md:p-5 md:pt-0 space-y-4">
              <div id="record-tab-content">
                  <div class="hidden p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="catch" role="tabpanel" aria-labelledby="catch-tab">
                    <%= turbo_frame_tag "new_catch_form", src: new_catch_path(format: :turbo_stream), loading: "lazy" %>
                  </div>
                  <div class="hidden p-4 rounded-lg bg-gray-50 dark:bg-gray-800" id="diary" role="tabpanel" aria-labelledby="diary-tab">
                    <%= turbo_frame_tag "new_diary_form", src: new_diary_path(format: :turbo_stream), loading: "lazy" %>
                  </div>
              </div>
            </div>
            <!-- Modal footer -->
            <div class="flex items-center justify-end p-4 md:p-5 space-x-3 rtl:space-x-reverse border-t border-gray-200 rounded-b dark:border-gray-600">
                <button data-modal-hide="record-modal" type="button" class="py-2.5 px-5 ms-3 text-sm md:text-base font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">閉じる</button>
            </div>
        </div>
    </div>
</div>