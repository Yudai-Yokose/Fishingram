<div class="fixed z-50 w-full h-16 max-w-lg -translate-x-1/2 bg-white border border-gray-200 rounded-full bottom-4 left-1/2 dark:bg-gray-900 dark:border-gray-800">
  <div class="grid h-full max-w-lg grid-cols-5 mx-auto">
    
    <!-- All Button -->
    <a href="<%= catches_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 rounded-s-full hover:bg-gray-50 dark:hover:bg-gray-800 group">
        <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M4.5 17H4a1 1 0 0 1-1-1 3 3 0 0 1 3-3h1m0-3.05A2.5 2.5 0 1 1 9 5.5M19.5 17h.5a1 1 0 0 0 1-1 3 3 0 0 0-3-3h-1m0-3.05a2.5 2.5 0 1 0-2-4.45m.5 13.5h-7a1 1 0 0 1-1-1 3 3 0 0 1 3-3h3a3 3 0 0 1 3 3 1 1 0 0 1-1 1Zm-1-9.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Z"/>
        </svg>
        <span class="text-gray-500 dark:text-gray-400 text-sm">All</span>
    </a>

    <!-- Yours Button -->
    <a href="<%= user_index_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group">
        <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Zm0 0a8.949 8.949 0 0 0 4.951-1.488A3.987 3.987 0 0 0 13 16h-2a3.987 3.987 0 0 0-3.951 3.512A8.948 8.948 0 0 0 12 21Zm3-11a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
        <span class="text-gray-500 dark:text-gray-400 text-sm">Yours</span>
    </a>

    <!-- Record Button -->
    <div class="flex items-center justify-center h-full">
      <button data-modal-target="record-modal" data-modal-toggle="record-modal" type="button" class="inline-flex flex-col items-center justify-center w-16 h-16 font-medium bg-blue-600 rounded-full hover:bg-blue-700 group focus:ring-4 focus:ring-blue-300 focus:outline-none dark:focus:ring-blue-800">
        <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m4.988 19.012 5.41-5.41m2.366-6.424 4.058 4.058-2.03 5.41L5.3 20 4 18.701l3.355-9.494 5.41-2.029Zm4.626 4.625L12.197 6.61 14.807 4 20 9.194l-2.61 2.61Z"/>
        </svg>
        <span class="text-white text-sm">Record</span>
      </button>
    </div>

    <% if user_signed_in? %>
      <!-- Diary Button -->
      <a href="<%= diaries_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group">
        <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 5V4a1 1 0 0 0-1-1H8.914a1 1 0 0 0-.707.293L4.293 7.207A1 1 0 0 0 4 7.914V20a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-5M9 3v4a1 1 0 0 1-1 1H4m11.383.772 2.745 2.746m1.215-3.906a2.089 2.089 0 0 1 0 2.953l-6.65 6.646L9 17.95l.739-3.692 6.646-6.646a2.087 2.087 0 0 1 2.958 0Z"/>
        </svg>
        <span class="text-gray-500 dark:text-gray-400 text-sm">Diary</span>
      </a>

      <!-- Profile Button -->
      <a href="<%= edit_user_registration_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 rounded-e-full hover:bg-gray-50 dark:hover:bg-gray-800 group">
        <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="square" stroke-linejoin="round" stroke-width="2" d="M10 19H5a1 1 0 0 1-1-1v-1a3 3 0 0 1 3-3h2m10 1a3 3 0 0 1-3 3m3-3a3 3 0 0 0-3-3m3 3h1m-4 3a3 3 0 0 1-3-3m3 3v1m-3-4a3 3 0 0 1 3-3m-3 3h-1m4-3v-1m-2.121 1.879-.707-.707m5.656 5.656-.707-.707m-4.242 0-.707.707m5.656-5.656-.707.707M12 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
        <span class="text-gray-500 dark:text-gray-400 text-sm">Profile</span>
      </a>
    <% else %>
      <!-- SignUp Button  -->
      <a href="<%= new_user_registration_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group">
        <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12h4m-2 2v-4M4 18v-1a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v1a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1Zm8-10a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
        <span class="text-gray-500 dark:text-gray-400 text-sm">SignUp</span>
      </a>
      <!-- Login Button -->
      <a href="<%= new_user_session_path %>" class="inline-flex flex-col items-center justify-center h-full px-5 rounded-e-full hover:bg-gray-50 dark:hover:bg-gray-800 group">
        <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H4m12 0-4 4m4-4-4-4m3-4h2a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3h-2"/>
        </svg>
        <span class="text-gray-500 dark:text-gray-400 text-sm">Login</span>
      </a>
    <% end %>
  </div>
</div>

<div id="record-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-10 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 max-h-full" data-controller="record">
  <div class="relative p-8 w-full max-w-2xl max-h-full">
    <div class="relative bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-900 dark:border-gray-700">
      <div class="text-base font-medium text-center text-gray-500 border-b border-gray-200 dark:text-gray-400 dark:border-gray-700">
        <!-- title -->
        <ul class="flex flex-wrap -mb-px w-full">
          <li class="flex-1" data-record-target="tab">
            <button data-index="0" data-action="click->record#show" class="inline-block w-full p-3 border-b-2 border-transparent rounded-t-lg hover:border-gray-300 text-right">
              <%= t('activerecord.attributes.catch.new.title') %>
            </button>
          </li>
          <li class="flex-1" data-record-target="tab">
            <button data-index="1" data-action="click->record#show" class="inline-block w-full p-3 border-b-2 border-transparent rounded-t-lg hover:border-gray-300 text-left">
              <%= t('activerecord.attributes.diary.new.title') %>
            </button>
          </li>
        </ul>
      </div>
      <!-- close button -->
      <button type="button" class="absolute top-2 right-1 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="record-modal">
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
        <span class="sr-only">Close modal</span>
      </button>
      <!-- content -->
      <div class="pt-0 pb-6 px-10">
        <div data-record-target="content" class="catch-form">
          <%= turbo_frame_tag "new_catch_form", src: new_catch_path(format: :turbo_stream), loading: "lazy" %>
        </div>
        <div data-record-target="content" class="diary-form hidden">
          <%= turbo_frame_tag "new_diary_form", src: new_diary_path(format: :turbo_stream), loading: "lazy" %>
        </div>
      </div>
    </div>
  </div>
</div>