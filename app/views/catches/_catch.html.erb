<li class="py-3 sm:py-4">
  <%= link_to catch_path(catch), class: "block" do %>
    <div class="flex items-center">
      <div class="flex items-center">
        <div class="flex -space-x-4 rtl:space-x-reverse">
          <%= image_tag catch.user.profile_image, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800", alt: "#{catch.user.username} profile image" %>
          <% if catch.images.any? %>
            <%= image_tag catch.images.first, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800", alt: "Catch image" %>
          <% end %>
        </div>
      </div>
      <div class="flex-1 min-w-0 ms-2">
        <p class="text-sm text-gray-900 truncate dark:text-white">
          <%= catch.user.username %>
        </p>
        <p class="text-sm text-gray-500 truncate dark:text-gray-400">
          <%= catch.created_at.in_time_zone('Asia/Tokyo').strftime("%Y年%-m月%-d日 %-H時%-M分") %>
        </p>
      </div>
    </div>
  <% end %>
</li>