<div class="px-4 pt-6">
  <!-- Details -->
  <div class="grid grid-cols-2 gap-4">
    <% attributes = {
      tide: t('activerecord.attributes.catch.show.tide'),
      tide_level: t('activerecord.attributes.catch.show.tide_level'),
      range: t('activerecord.attributes.catch.show.range'),
      size: t('activerecord.attributes.catch.show.size')
    } %>

    <% attributes.each do |key, label| %>
      <div class="flex flex-col">
        <span class="block mb-2 text-xs font-medium text-gray-900 dark:text-white">
          <%= label %>
        </span>
        <p class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full pl-3 p-2 dark:bg-gray-900 dark:border-gray-700 dark:placeholder-gray-400 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500">
          <%= catch.send(key) %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Memo -->
  <% if catch.memo.present? %>
    <div class="flex flex-col mt-4">
      <span class="block mb-2 text-xs font-medium text-gray-900 dark:text-white"><%= t('activerecord.attributes.catch.show.memo') %></span>
      <p class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full pl-3 p-2 dark:bg-gray-900 dark:border-gray-700 dark:placeholder-gray-400 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500 break-words whitespace-normal"><%= catch.memo %></p>
    </div>
  <% end %>

  <!-- Google Map -->
  <% if catch.latitude.present? && catch.longitude.present? %>
    <div class="flex flex-col mt-4">
      <span class="block mb-2 text-xs font-medium text-gray-900 dark:text-white"><%= t('activerecord.attributes.catch.show.map') %></span>
      <div data-controller="catchshowmap"
          data-catchshowmap-latitude-value="<%= catch.latitude %>"
          data-catchshowmap-longitude-value="<%= catch.longitude %>"
          data-catchshowmap-map-id-value="<%= Rails.application.credentials.google[:maps_id] %>"
          data-catchshowmap-api-key-value="<%= Rails.application.credentials.google[:maps_api_key] %>"
          data-catchshowmap-catch-id-value="<%= catch.id %>">
        <div id="map_<%= catch.id %>" class="rounded-lg map-container" style="height: 200px;">
        </div>
      </div>
    </div>
  <% end %>

  <!-- Bottom menu -->
  <div class="grid grid-cols-4 gap-1 mt-4">
    <% if current_user == @catch.user %>
      <!-- Delete --> 
      <%= turbo_frame_tag "catch_#{catch.id}" do %>
        <%= link_to catch, method: :delete, data: { turbo_method: :delete, turbo_confirm: t('activerecord.attributes.catch.show.confirm') }, class: 'flex items-center justify-center text-gray-900 bg-white focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-xs px-3 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700' do %>
          <%= t('activerecord.attributes.catch.show.delete') %>
        <% end %>
      <% end %>

      <!-- Edit --> 
      <button data-modal-target="catcheditmodal_<%= catch.id %>" data-modal-toggle="catcheditmodal_<%= catch.id %>" data-action="click->hello#stopToggle" type="button" class="flex items-center justify-center text-gray-900 bg-white focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-xs px-3 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
        <%= t('activerecord.attributes.catch.show.edit') %>
      </button>
    <% end %>

    <!-- Comment form -->    
    <button data-modal-target="commentmodal_<%= catch.id %>" data-modal-toggle="commentmodal_<%= catch.id %>" data-action="click->hello#stopToggle" type="button" class="flex items-center justify-center text-gray-900 bg-white focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-xs px-0 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
      <%= t('activerecord.attributes.catch.show.comment') %>
    </button>

    <!-- Like -->  
    <%= render partial: 'likes/like_button', locals: { catch: catch } %>
  </div>

  <!-- Comment board -->
    <div class="flow-root mt-4">
      <%= turbo_frame_tag "catch_#{catch.id}_comments" do %>
        <% @catch.comments.each do |comment| %>
          <%= render partial: "comments/comment", locals: { catch: catch, comment: comment } %>
        <% end %>
      <% end %>
    </div>
</div>

<!-- Editmodal -->
<% if current_user == @catch.user %>
  <div id="catcheditmodal_<%= catch.id %>" 
    data-catcheditmodal-catch-id-value="<%= catch.id %>" 
    data-catcheditmodal-target="catcheditmodal" 
    data-controller="catcheditmodal" 
    data-action="click->hello#stopToggle" 
    tabindex="-1" 
    aria-hidden="true" 
    class="hidden fixed inset-0 z-50 flex justify-center items-center overflow-y-auto overflow-x-hidden bg-gray-900 bg-opacity-70">
    <div class="relative p-4 w-full max-w-sm min-h-[60vh] max-h-full">
      <div class="border border-gray-700 rounded-lg shadow bg-gray-900">
        <div class="relative rounded-t text-center">
          <button type="button" 
                  class="absolute top-3 right-3 text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg w-8 h-8 inline-flex justify-center items-center" 
                  data-modal-hide="catcheditmodal_<%= catch.id %>">
            <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="py-1 px-1">
          <%= turbo_frame_tag "edit_catch_#{catch.id}_form", src: edit_catch_path(catch, format: :turbo_stream), data: { turbo_action: "replace" }, loading: "lazy" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Comment create modal -->
<div id="commentmodal_<%= catch.id %>" 
  data-commentmodal-catch-id-value="<%= catch.id %>" 
  data-commentmodal-target="commentmodal" 
  data-controller="commentmodal" 
  data-action="click->hello#stopToggle" 
  tabindex="-1" 
  aria-hidden="true" 
  class="hidden fixed inset-0 z-50 flex justify-center items-center overflow-y-auto overflow-x-hidden bg-gray-900 bg-opacity-70">
  <div class="relative p-4 w-full max-w-sm min-h-[60vh] max-h-full">
    <div class="border border-gray-700 rounded-lg shadow bg-gray-900">
      <div class="relative rounded-t text-center">
        <button type="button" 
                class="absolute top-3 right-3 text-gray-400 bg-transparent hover:bg-gray-600 hover:text-white rounded-lg w-8 h-8 inline-flex justify-center items-center" 
                data-modal-hide="commentmodal_<%= catch.id %>">
          <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div class="py-1 px-1">
        <%= turbo_frame_tag "new_comment_#{catch.id}_form", src: new_catch_comment_path(catch, format: :turbo_stream), data: { turbo_action: "advance" }, loading: "lazy" %>
      </div>
    </div>
  </div>
</div>